.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
}
.dialog {
  position: absolute;
  bottom: 20px;
  left: 10%;
  width: 80%;
  height: 80%;
  background: #fff;
  padding: 10px;
  box-sizing: border-box;
}
.dialog image {
  width: 100%;
  height: 80%;
}
.dialog .btns {
  display: flex;
  justify-content: space-between;
}
.dialog .close {
  position: absolute;
  top: -8px;
  right: -5px;
  width: 30px;
  height: 30px;
  line-height: 30px;
  border-radius: 100%;
  background: #666;
  color: #fff;
  text-align: center;
}
