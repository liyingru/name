.swiper-box {
  position: relative;
  padding: 0 10px;
  box-sizing: border-box;
}
.swiper-box .swiper-item {
  width: 100%;
  height: 100%;
  border-radius: 5px;
}
.swiper-box .swiper-item image {
  width: 100%;
  height: 100%;
  border-radius: 5px;
}
.swiper-box .dots {
  display: flex;
  position: absolute;
  bottom: 10px;
  left: 50%;
  margin-left: -75px;
}
.swiper-box .dot {
  width: 20px;
  height: 5px;
  background: #fff;
  margin-right: 10px;
}
.swiper-box .dot.active {
  background: yellow;
}
.swiper-text {
  position: absolute;
  bottom: 10px;
  color: #fff;
}
