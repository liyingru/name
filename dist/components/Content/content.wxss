.weekday {
  padding: 10px;
  box-sizing: border-box;
}
.weekday .weekday-title {
  font-size: 20px;
  color: #666;
  margin-bottom: 20px;
}
.weekday .weekday-list {
  white-space: nowrap;
}
.weekday .weekday-list .weekday-list-item {
  display: inline-block;
  margin-right: 5px;
  text-align: center;
  font-size: 12px;
}
.weekday .weekday-list .weekday-list-item .weekday-img {
  width: 80px;
  height: 100px;
  margin: 0 auto;
  border-radius: 5px;
}
.weekday .weekday-list .weekday-list-item .weekday-img image {
  width: 100%;
  height: 100%;
  border-radius: 5px;
}
.weekday .weekday-list .weekday-list-item .weekday-intro {
  width: 100px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.weekday .weekday-list .weekday-list-item .weekday-tit {
  font-weight: bold;
  color: #000;
  margin-bottom: 5px;
  font-size: 15px;
  width: 100px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
